<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_date_validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Invoice_status__c , &quot;CLOSED&quot;) , ISNULL( Invoice_closed_date__c ))</errorConditionFormula>
    <errorDisplayField>Invoice_closed_date__c</errorDisplayField>
    <errorMessage>Enter Close Date</errorMessage>
</ValidationRule>
